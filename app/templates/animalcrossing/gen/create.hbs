{{#link-to 'animalcrossing.gen'}}<button class="cancel-button">Back</button>{{/link-to}} 

<div class="letter">
	<h2>New Generation</h2>
	<form {{action 'saveAlbum' on='submit'}}>
	  <div class="form-group">
		  <ol>
			  <li>
				  <label for="title">Label Name:</label>
				  {{input value=title class="post-field" id="title" placeholder="Name" required="required"}}
				  </li>
			  <li>
				  <label for="date">Release Date:</label>
				  {{input value=releaseDate class="post-field"  id="date" placeholder="Jan. 3, 1337" required="required"}}
				  </li>
			  <li>
				  <label for="platform">Platform:</label>
				  {{input value=platform class="post-field" placeholder="nintendo"  id="platform" required="required"}}
				  </li>
			  <li>
				  <label for="imageURL">Upload Image(URL):</label>
				  {{input value=imageURL class="post-field" id="imageURL" placeholder="http://..." required="required"}}
				  </li>
		  </ol>
	  </div>

		{{input id="save" class="btn btn-default" type="submit" value="Save!"}}
	</form>
</div>